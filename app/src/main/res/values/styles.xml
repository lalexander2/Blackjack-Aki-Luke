<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ViewStyle" parent="@android:style/TextAppearance">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="CardStyle" parent="@android:style/TextAppearance">
        <item name="android:layout_height">140dp</item>
        <item name="android:layout_width">100dp</item>

        <item name="android:background">@color/white</item>

        <item name="android:textSize">28sp</item>

        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginBottom">9dp</item>
    </style>

    <style name="PlayerCard" parent="CardStyle">
        <item name = "android:layout_marginTop">400dp</item>
    </style>

    <style name="ButtonStyle" parent="@android:style/TextAppearance">
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:padding">10dp</item>

        <item name = "android:layout_marginTop">25dp</item>
        <item name = "android:layout_marginLeft">15dp</item>
        <item name = "android:layout_marginRight">15dp</item>

        <item name="android:textSize">28sp</item>
    </style>

</resources>